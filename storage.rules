rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read/write their own campaign files
    match /campaigns/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow logo uploads (via server-side admin SDK)
    match /logos/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if request.auth != null; // Authenticated users can upload
    }

    // Allow client uploads for discovery
    match /client-uploads/{allPaths=**} {
      allow read: if true; // Public read access
      allow write: if true; // Anyone can upload (discovery questionnaire)
    }

    // Allow authenticated team members to upload/read proposals
    match /proposals/{allPaths=**} {
      allow read: if true; // Public read access (clients need to view their proposals)
      allow write: if request.auth != null; // Only authenticated users can upload
    }
  }
}
